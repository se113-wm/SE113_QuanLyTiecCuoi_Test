<Window x:Class="QuanLyTiecCuoi.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyTiecCuoi"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodel="clr-namespace:QuanLyTiecCuoi.ViewModel"
        xmlns:controls="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:materialDesignColors="clr-namespace:MaterialDesignColors;assembly=MaterialDesignColors"
        xmlns:uc="clr-namespace:QuanLyTiecCuoi.UserControlUC" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource LoginViewModel}"

        Name="loginWindow"
        mc:Ignorable="d"
        Title="Đăng Nhập"
        Height="645" Width="875"
        SizeToContent="Manual"

        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Định nghĩa các hàng -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hàng cho ControlBarUC -->
            <RowDefinition Height="*"/>
            <!-- Hàng cho nội dung chính -->
        </Grid.RowDefinitions>

        <!-- ControlBarUC hiển thị trên cùng -->
        <!--<uc:ControlBarUC Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" />-->

        <!-- Nội dung chính -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.25*"/>
            </Grid.ColumnDefinitions>
            <Grid.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="1" Opacity="0.4"/>
            </Grid.Effect>
            <Border Background="#6a7eee" ClipToBounds="True">
                <Grid>
                    <!-- Canvas chứa các Ellipse được đặt trước để nằm dưới -->
                    <Canvas>
                        <Ellipse Width="500" Height="500" Fill="#80c0ff" Opacity="0.6"/>
                        <Ellipse Width="300" Height="300" Fill="#83c2ff" Opacity="0.3"/>
                        <Ellipse Width="400" Height="400" Fill="#84c3ff" Opacity="0.3"/>
                        <Ellipse Width="250" Height="250" Fill="#81c2ff"/>
                        <Ellipse Width="400" Height="400" Fill="#87c5ff" Opacity="0.8"/>
                    </Canvas>

                    <!-- StackPanel chứa các TextBlock được đặt sau để nằm trên -->
                    <StackPanel Margin="0 50 0 0" VerticalAlignment="Center">
                        <TextBlock FontWeight="Light" FontSize="35" Foreground="White" TextAlignment="Center" Text="Trung tâm Tiệc cưới"/>
                        <TextBlock FontWeight="Light" FontSize="18" Foreground="White" TextAlignment="Center" Text="Đăng Nhập" Height="23"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Grid.Column="1" Background="White">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto" MinHeight="196.04"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center" Height="206">
                        <!-- Ô nhập Tên đăng nhập -->
                        <Border Background="#80c0ff" CornerRadius="5" Margin="6" Opacity="0.7" Padding="6">
                            <Grid>
                                <TextBox
                                    x:Name="UserNameBox"
                                    Text="{Binding UserName}"
                                    materialDesign:HintAssist.Hint="Tên Đăng Nhập"
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    TextWrapping="Wrap"
                                    Foreground="Black"
                                    FontSize="23"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="TextChanged">
                                            <i:InvokeCommandAction Command="{Binding UserNameChangedCommand}"
                                                                   CommandParameter="{Binding ElementName=UserNameBox}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>
                        </Border>

                        <!-- Ô nhập Mật khẩu -->
                        <Border Background="#80c0ff" CornerRadius="5" Margin="6" Opacity="0.7" Padding="6">
                            <Grid>
                                <PasswordBox
                                    x:Name="FloatingPasswordBox"
                                    materialDesign:HintAssist.Hint="Mật Khẩu"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    Style="{StaticResource MaterialDesignFilledRevealPasswordBox}"
                                    Foreground="Black"
                                    FontSize="23"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PasswordChanged">
                                            <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}"
                                                                   CommandParameter="{Binding ElementName=FloatingPasswordBox}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </PasswordBox>
                            </Grid>
                        </Border>

                    </StackPanel>
                    <Border Grid.Row="2" Background="#6a7eee" Width="250" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Height="46">
                        <Button
                            Content="Đăng Nhập"
                            Background="Transparent"
                            Foreground="White"
                            FontSize="18"
                            BorderThickness="0"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=loginWindow}"
                            IsDefault="True"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
