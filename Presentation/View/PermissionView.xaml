<UserControl
    x:Class="QuanLyTiecCuoi.PermissionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:QuanLyTiecCuoi"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Name="PermissionViewControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Tên trang  -->
        <TextBlock
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Quản lý danh sách phân quyền"
            AutomationProperties.AutomationId="PermissionPageTitle" />

        <!--  Thông tin chi tiết  -->
        <materialDesign:Card
            Grid.Row="1"
            Margin="10"
            Padding="10"
            BorderThickness="0.5"
            AutomationProperties.AutomationId="PermissionDetailsCard">
            <StackPanel>
                <!--  Tiêu đề + Nút Reset  -->
                <StackPanel
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Thông tin chi tiết" />
                    <Button
                        Width="36"
                        Height="36"
                        Margin="5,0,0,0"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Command="{Binding ResetCommand}"
                        Foreground="Purple"
                        Style="{StaticResource MaterialDesignToolButton}"
                        ToolTip="Reset thông tin"
                        AutomationProperties.AutomationId="ResetButton">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Kind="Restore" />
                    </Button>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        Margin="5"
                        materialDesign:HintAssist.Hint="Tên phân quyền"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding GroupName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        AutomationProperties.AutomationId="GroupNameTextBox" />
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!--  Nút & tìm kiếm  -->
        <materialDesign:Card
            Grid.Row="2"
            Margin="10"
            Padding="10"
            BorderThickness="0.5"
            AutomationProperties.AutomationId="ActionsCard">
            <StackPanel>
                <TextBlock
                    Margin="0,0,10,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Thao tác" />
                <DockPanel VerticalAlignment="Top" LastChildFill="False">
                    <!--  Tìm kiếm  -->
                    <StackPanel
                        VerticalAlignment="Top"
                        DockPanel.Dock="Left"
                        Orientation="Horizontal">
                        <ComboBox
                            Width="200"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Tìm theo"
                            ItemsSource="{Binding SearchProperties}"
                            SelectedItem="{Binding SelectedSearchProperty, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            AutomationProperties.AutomationId="SearchPropertyComboBox" />
                        <TextBox
                            Width="300"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Tìm kiếm..."
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            AutomationProperties.AutomationId="SearchTextBox" />
                    </StackPanel>

                    <StackPanel
                        Margin="0,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        DockPanel.Dock="Right"
                        Orientation="Horizontal">
                        <!--  ComboBox chọn thao tác  -->
                        <ComboBox
                            Width="200"
                            Margin="0,0,5,14"
                            materialDesign:HintAssist.Hint="Chọn thao tác"
                            ItemsSource="{Binding ActionList}"
                            SelectedItem="{Binding SelectedAction, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            AutomationProperties.AutomationId="ActionComboBox" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!--  Nút Thêm  -->
                            <StackPanel
                                Width="110"
                                Margin="0,0,0,0"
                                Visibility="{Binding IsAdding, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                    Width="100"
                                    Margin="5"
                                    Command="{Binding AddCommand}"
                                    Content="Thêm"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    AutomationProperties.AutomationId="AddButton" />
                                <TextBlock
                                    Height="32"
                                    FontSize="10"
                                    Foreground="Gray"
                                    Text="{Binding AddMessage}"
                                    TextWrapping="Wrap"
                                    AutomationProperties.AutomationId="AddMessage" />
                            </StackPanel>

                            <!--  Nút Sửa  -->
                            <StackPanel
                                Width="110"
                                Margin="0,0,0,0"
                                Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                    Width="100"
                                    Margin="5"
                                    Command="{Binding EditCommand}"
                                    Content="Sửa"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    AutomationProperties.AutomationId="EditButton" />
                                <TextBlock
                                    Height="32"
                                    VerticalAlignment="Top"
                                    FontSize="10"
                                    Foreground="Gray"
                                    Text="{Binding EditMessage}"
                                    TextWrapping="Wrap"
                                    AutomationProperties.AutomationId="EditMessage" />
                            </StackPanel>

                            <!--  Nút Xóa  -->
                            <StackPanel
                                Width="110"
                                Margin="0,0,0,0"
                                Visibility="{Binding IsDeleting, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                    Width="100"
                                    Margin="5"
                                    Command="{Binding DeleteCommand}"
                                    Content="Xóa"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    AutomationProperties.AutomationId="DeleteButton" />
                                <TextBlock
                                    Height="32"
                                    VerticalAlignment="Top"
                                    FontSize="10"
                                    Foreground="Gray"
                                    Text="{Binding DeleteMessage}"
                                    TextWrapping="Wrap"
                                    AutomationProperties.AutomationId="DeleteMessage" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </materialDesign:Card>

        <!--  Danh sách nhóm phân quyền và chức năng  -->
        <materialDesign:Card
            Grid.Row="3"
            Margin="10"
            Padding="5"
            VerticalAlignment="Stretch"
            BorderThickness="0.5"
            AutomationProperties.AutomationId="PermissionListCard">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Cột trái: Danh sách nhóm phân quyền  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Danh sách nhóm quyền" />

                    <ListView
                        Grid.Row="1"
                        Margin="0"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        ItemsSource="{Binding GroupList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                        AutomationProperties.AutomationId="PermissionGroupListView">
                        <ListView.View>
                            <GridView>
                                <!--  Icon  -->
                                <GridViewColumn Width="50">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="" />
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <materialDesign:PackIcon
                                                Width="24"
                                                Height="24"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource BoolToBrushConverter}}"
                                                Kind="RadioboxMarked" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!--  Tên nhóm  -->
                                <GridViewColumn Width="200" Header="Tên nhóm">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Margin="20,0,0,0"
                                                HorizontalAlignment="Left"
                                                Text="{Binding GroupName}"
                                                TextAlignment="Left" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>

                <!--  Cột phải: Danh sách chức năng với checkbox  -->
                <Grid Grid.Column="1" Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Chi tiết phân quyền" />
                    <StackPanel Grid.Row="1" Margin="10,0,0,0">
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[HallType]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="HallTypePermissionCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình quản lý danh sách các loại sảnh" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[Hall]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="HallPermissionCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình quản lý danh sách các sảnh" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[Shift]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="ShiftPermissionCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình quản lý danh sách các ca" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[Food]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="FoodPermissionCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình quản lý danh sách các món ăn" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[Service]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="ServicePermissionCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình quản lý danh sách các dịch vụ" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[Wedding]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="WeddingPermissionCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình quản lý danh sách các tiệc cưới" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[Report]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="ReportPermissionCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình báo cáo doanh thu" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[Parameter]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="ParameterPermissionCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình chỉnh sửa tham số qui định" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[Permission]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="PermissionManagementCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình quản lý phân quyền" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5"
                            DataContext="{Binding PermissionStates[User]}"
                            Orientation="Horizontal">
                            <CheckBox
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                AutomationProperties.AutomationId="UserPermissionCheckBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Màn hình quản lý danh sách các người dùng" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
