<Window x:Class="QuanLyTiecCuoi.Presentation.View.ChartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyTiecCuoi.Presentation.View"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Biểu Đồ Doanh Thu"
        
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#f2f6fc">

    <Border Margin="20"
        Background="White"
        CornerRadius="12"
        BorderBrush="#C5CAE9"
        BorderThickness="1.5"
        Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="4" Direction="270" Opacity="0.4" Color="Gray"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="📊 BIỂU ĐỒ DOANH THU"
                       FontSize="24"
                       FontWeight="Bold"
                       FontFamily="Segoe UI"
                       Foreground="DarkSlateBlue"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <!-- Biểu đồ cột -->
            <lvc:CartesianChart Grid.Row="1"
                                Series="{Binding SeriesCollection}"
                                LegendLocation="Right"
                                Margin="10"
                                Background="#FAFAFA"
                                Foreground="DarkSlateBlue">

                <!-- Trục X: ngày -->
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Ngày"
                              Labels="{Binding Labels}"

                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#455A64">
                        <lvc:Axis.Separator>
                            <lvc:Separator Stroke="#B0BEC5" StrokeThickness="0.8" Step="1"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>

                <!-- Trục Y: doanh thu -->
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Doanh thu (VNĐ)"
                              LabelFormatter="{Binding Formatter}"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#455A64">
                        <lvc:Axis.Separator>
                            <lvc:Separator Stroke="#CFD8DC" StrokeThickness="1"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Grid>
    </Border>
</Window>
