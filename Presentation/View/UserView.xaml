<UserControl
    x:Class="QuanLyTiecCuoi.Presentation.View.UserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:QuanLyTiecCuoi"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Tên trang  -->
        <TextBlock
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Quản lý danh sách người dùng"
            AutomationProperties.AutomationId="UserPageTitle" />

        <!--  Thông tin chi tiết  -->
        <materialDesign:Card
            Grid.Row="1"
            Margin="10"
            Padding="10"
            BorderThickness="0.5"
            AutomationProperties.AutomationId="UserDetailsCard">
            <StackPanel>
                <!--  Tiêu đề + Nút Reset  -->
                <StackPanel
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Thông tin chi tiết" />
                    <Button
                        Width="36"
                        Height="36"
                        Margin="5,0,0,0"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Command="{Binding ResetCommand}"
                        Foreground="Purple"
                        Style="{StaticResource MaterialDesignToolButton}"
                        ToolTip="Reset thông tin"
                        AutomationProperties.AutomationId="ResetButton">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Kind="Restore" />
                    </Button>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <!--  Tên đăng nhập  -->
                    <TextBox
                        Grid.Column="0"
                        Margin="5"
                        materialDesign:HintAssist.Hint="Tên đăng nhập"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        AutomationProperties.AutomationId="UsernameTextBox" />

                    <!--  Họ tên  -->
                    <TextBox
                        Grid.Column="1"
                        Margin="5"
                        materialDesign:HintAssist.Hint="Họ tên"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        AutomationProperties.AutomationId="FullNameTextBox" />

                    <!--  Email  -->
                    <TextBox
                        Grid.Column="2"
                        Margin="5"
                        materialDesign:HintAssist.Hint="Email"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        AutomationProperties.AutomationId="EmailTextBox" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <!--  Nhóm người dùng (ComboBox)  -->
                    <ComboBox
                        Grid.Column="0"
                        Margin="5"
                        materialDesign:HintAssist.Hint="Nhóm người dùng"
                        DisplayMemberPath="GroupName"
                        ItemsSource="{Binding UserTypes}"
                        SelectedItem="{Binding SelectedUserType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        AutomationProperties.AutomationId="UserGroupComboBox" />

                    <!--  Mật khẩu  -->
                    <TextBox
                        Grid.Column="1"
                        Margin="5"
                        materialDesign:HintAssist.Hint="Mật khẩu mới"
                        Text="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        AutomationProperties.AutomationId="NewPasswordTextBox">
                        <TextBox.Style>
                            <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">
                                <Setter Property="IsReadOnly" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=PasswordCheckBox}" Value="True">
                                        <Setter Property="IsReadOnly" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!--  Đổi mật khẩu (CheckBox)  -->
                    <StackPanel
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="PasswordCheckBox"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsChecked="{Binding IsPasswordChangeEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            AutomationProperties.AutomationId="PasswordChangeCheckBox" />
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="10"
                            Foreground="Gray"
                            Text="Nhập mật khẩu mới" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!--  Nút & tìm kiếm  -->
        <materialDesign:Card
            Grid.Row="2"
            Margin="10"
            Padding="10"
            BorderThickness="0.5"
            AutomationProperties.AutomationId="ActionsCard">
            <StackPanel>
                <TextBlock
                    Margin="0,0,10,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Thao tác" />
                <DockPanel VerticalAlignment="Top" LastChildFill="False">
                    <!--  Tìm kiếm  -->
                    <StackPanel
                        VerticalAlignment="Top"
                        DockPanel.Dock="Left"
                        Orientation="Horizontal">
                        <ComboBox
                            Width="200"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Tìm theo"
                            ItemsSource="{Binding SearchProperties}"
                            SelectedItem="{Binding SelectedSearchProperty, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            AutomationProperties.AutomationId="SearchPropertyComboBox" />
                        <TextBox
                            Width="300"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Tìm kiếm..."
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            AutomationProperties.AutomationId="SearchTextBox" />
                    </StackPanel>

                    <StackPanel
                        Margin="0,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        DockPanel.Dock="Right"
                        Orientation="Horizontal">
                        <!--  ComboBox chọn thao tác  -->
                        <ComboBox
                           Width="200"
                           Margin="0,0,5,14"
                           materialDesign:HintAssist.Hint="Chọn thao tác"
                           ItemsSource="{Binding ActionList}"
                           SelectedItem="{Binding SelectedAction, Mode=TwoWay}"
                           Style="{StaticResource MaterialDesignOutlinedComboBox}"
                           AutomationProperties.AutomationId="ActionComboBox" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!--  Nút Thêm  -->
                            <StackPanel
                               Width="110"
                               Margin="0,0,0,0"
                               Visibility="{Binding IsAdding, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                   Width="100"
                                   Margin="5"
                                   Command="{Binding AddCommand}"
                                   Content="Thêm"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   AutomationProperties.AutomationId="AddButton" />
                                <TextBlock
                                   Height="32"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Text="{Binding AddMessage}"
                                   TextWrapping="Wrap"
                                   AutomationProperties.AutomationId="AddMessage" />
                            </StackPanel>

                            <!--  Nút Sửa  -->
                            <StackPanel
                               Width="110"
                               Margin="0,0,0,0"
                               Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                   Width="100"
                                   Margin="5"
                                   Command="{Binding EditCommand}"
                                   Content="Sửa"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   AutomationProperties.AutomationId="EditButton" />
                                <TextBlock
                                   Height="32"
                                   VerticalAlignment="Top"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Text="{Binding EditMessage}"
                                   TextWrapping="Wrap"
                                   AutomationProperties.AutomationId="EditMessage" />
                            </StackPanel>

                            <!--  Nút Xóa  -->
                            <StackPanel
                               Width="110"
                               Margin="0,0,0,0"
                               Visibility="{Binding IsDeleting, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                   Width="100"
                                   Margin="5"
                                   Command="{Binding DeleteCommand}"
                                   Content="Xóa"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   AutomationProperties.AutomationId="DeleteButton" />
                                <TextBlock
                                   Height="32"
                                   VerticalAlignment="Top"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Text="{Binding DeleteMessage}"
                                   TextWrapping="Wrap"
                                   AutomationProperties.AutomationId="DeleteMessage" />
                            </StackPanel>
                            <!--  Nút Xuất Excel  -->
                            <StackPanel
                               Width="110"
                               Margin="0,0,0,0"
                               Visibility="{Binding IsExporting, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                   Width="100"
                                   Margin="5"
                                   Command="{Binding ExportToExcelCommand}"
                                   Content="Xuất Excel"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   AutomationProperties.AutomationId="ExportExcelButton" />
                                <TextBlock
                                   Height="32"
                                   VerticalAlignment="Top"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Text="Xuất danh sách ra Excel"
                                   TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </materialDesign:Card>

        <!--  Danh sách người dùng  -->
        <materialDesign:Card
            Grid.Row="3"
            Margin="10"
            Padding="5"
            VerticalAlignment="Stretch"
            BorderThickness="0.5"
            AutomationProperties.AutomationId="UserListCard">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,10,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Danh sách người dùng" />

                <ListView
                    Grid.Row="1"
                    Margin="0"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    ItemsSource="{Binding UserList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                    AutomationProperties.AutomationId="UserListView">
                    <ListView.View>
                        <GridView>
                            <!--  Icon  -->
                            <GridViewColumn Width="50">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="" />
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Foreground="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource BoolToBrushConverter}}"
                                            Kind="RadioboxMarked" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <!--  Tên đăng nhập  -->
                            <GridViewColumn Width="150" Header="Tên đăng nhập">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="20,0,0,0"
                                            HorizontalAlignment="Left"
                                            Text="{Binding Username}"
                                            TextAlignment="Left" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <!--  Họ Tên  -->
                            <GridViewColumn Width="200" Header="Họ tên">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="20,0,0,0"
                                            HorizontalAlignment="Left"
                                            Text="{Binding FullName}"
                                            TextAlignment="Left" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <!--  Nhóm người dùng  -->
                            <GridViewColumn Width="200" Header="Nhóm người dùng">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="20,0,0,0"
                                            HorizontalAlignment="Left"
                                            Text="{Binding UserGroup.GroupName}"
                                            TextAlignment="Left" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <!--  Email  -->
                            <GridViewColumn Width="200" Header="Email">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="20,0,0,0"
                                            HorizontalAlignment="Left"
                                            Text="{Binding Email}"
                                            TextAlignment="Left" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
