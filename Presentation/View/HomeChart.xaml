<UserControl
    x:Class="QuanLyTiecCuoi.Presentation.View.HomeChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyTiecCuoi.Presentation.View"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        Background="White"
        BorderBrush="#C5CAE9"
        BorderThickness="1.5"
        CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="10"
                Direction="270"
                Opacity="0.4"
                ShadowDepth="4"
                Color="Gray" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Tiêu đề  -->
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="Segoe UI"
                FontSize="12"
                FontWeight="Bold"
                Foreground="Green"
                Text="📈 BIỂU ĐỒ DOANH THU" />

            <!--  Biểu đồ đường/miền  -->
            <lvc:CartesianChart
                Grid.Row="1"
                Background="#FAFAFA"
                Foreground="Green"
                LegendLocation="Right"
                Series="{Binding SeriesCollection}">

                <!--  Trục X: ngày  -->


                <!--  Trục Y: doanh thu  -->

            </lvc:CartesianChart>
        </Grid>
    </Border>
</UserControl>