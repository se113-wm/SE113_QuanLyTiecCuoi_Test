<UserControl
    x:Class="QuanLyTiecCuoi.Presentation.View.HomeChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyTiecCuoi.Presentation.View"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#f2f6fc"
    mc:Ignorable="d">

    <Border
        Margin="20"
        Padding="20"
        Background="White"
        BorderBrush="#C5CAE9"
        BorderThickness="1.5"
        CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="10"
                Direction="270"
                Opacity="0.4"
                ShadowDepth="4"
                Color="Gray" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Tiêu đề  -->
            <TextBlock
                Margin="0,0,0,25"
                HorizontalAlignment="Center"
                FontFamily="Segoe UI"
                FontSize="24"
                FontWeight="Bold"
                Foreground="DarkSlateBlue"
                Text="📊 BIỂU ĐỒ DOANH THU" />

            <!--  Biểu đồ cột  -->
            <lvc:CartesianChart
                Grid.Row="1"
                Margin="10"
                Background="#FAFAFA"
                Foreground="DarkSlateBlue"
                LegendLocation="Right"
                Series="{Binding SeriesCollection}">

                <!--  Trục X: ngày  -->
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis
                        Title="Ngày"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#455A64"
                        Labels="{Binding Labels}">
                        <lvc:Axis.Separator>
                            <lvc:Separator
                                Step="1"
                                Stroke="#B0BEC5"
                                StrokeThickness="0.8" />
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>

                <!--  Trục Y: doanh thu  -->
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis
                        Title="Doanh thu (VNĐ)"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#455A64"
                        LabelFormatter="{Binding Formatter}">
                        <lvc:Axis.Separator>
                            <lvc:Separator Stroke="#CFD8DC" StrokeThickness="1" />
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Grid>
    </Border>
</UserControl>