<UserControl
    x:Class="QuanLyTiecCuoi.Presentation.View.ServiceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:QuanLyTiecCuoi"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Name="ServiceViewControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Tên trang  -->
        <TextBlock
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Quản lý danh sách dịch vụ"
            AutomationProperties.AutomationId="ServicePageTitle" />

        <!--  Thông tin chi tiết  -->
        <materialDesign:Card
            Grid.Row="1"
            Margin="10"
            Padding="10"
            BorderThickness="0.5"
            AutomationProperties.AutomationId="ServiceDetailsCard">
            <StackPanel>
                <!--  Tiêu đề + Nút Reset  -->
                <StackPanel
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Thông tin chi tiết" />
                    <Button
                        Width="36"
                        Height="36"
                        Margin="5,0,0,0"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Command="{Binding ResetCommand}"
                        Foreground="Purple"
                        Style="{StaticResource MaterialDesignToolButton}"
                        ToolTip="Reset thông tin"
                        AutomationProperties.AutomationId="ResetButton">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Kind="Restore" />
                    </Button>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!--  Image column  -->
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Width="100"
                        Height="100"
                        Margin="5"
                        Background="#FFF0F0F0"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8"
                        AutomationProperties.AutomationId="ServiceImageBorder">
                        <Grid>
                            <Image
                                Width="100"
                                Height="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="{Binding Image}"
                                Stretch="UniformToFill"
                                AutomationProperties.AutomationId="ServiceImage">
                                <Image.Clip>
                                    <RectangleGeometry
                                        RadiusX="8"
                                        RadiusY="8"
                                        Rect="0,0,100,100" />
                                </Image.Clip>
                            </Image>
                            <Button
                                Width="92"
                                Height="92"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding SelectImageCommand}"
                                ToolTip="{Binding ImageBtnToolTip}"
                                AutomationProperties.AutomationId="SelectServiceImageButton">
                                <materialDesign:PackIcon
                                    Width="36"
                                    Height="36"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="#888"
                                    Kind="Camera"
                                    Visibility="{Binding HasNoImage, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </Button>
                        </Grid>
                    </Border>

                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        materialDesign:HintAssist.Hint="Tên dịch vụ"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding ServiceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        AutomationProperties.AutomationId="ServiceNameTextBox" />

                    <TextBox
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="5"
                        materialDesign:HintAssist.Hint="Đơn giá"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding UnitPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrencyFormatConverter}}"
                        AutomationProperties.AutomationId="UnitPriceTextBox" />

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="5"
                        materialDesign:HintAssist.Hint="Ghi chú"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        AutomationProperties.AutomationId="NoteTextBox" />
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!--  Nút & tìm kiếm  -->
        <materialDesign:Card
            Grid.Row="2"
            Margin="10"
            Padding="10"
            BorderThickness="0.5"
            AutomationProperties.AutomationId="ActionsCard">
            <StackPanel>
                <TextBlock
                    Margin="0,0,10,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Thao tác" />
                <DockPanel VerticalAlignment="Top" LastChildFill="False">
                    <!--  Tìm kiếm  -->
                    <StackPanel
                        VerticalAlignment="Top"
                        DockPanel.Dock="Left"
                        Orientation="Horizontal">
                        <ComboBox
                            Width="200"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Tìm theo"
                            ItemsSource="{Binding SearchProperties}"
                            SelectedItem="{Binding SelectedSearchProperty, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            AutomationProperties.AutomationId="SearchPropertyComboBox" />
                        <TextBox
                            Width="300"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Tìm kiếm..."
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            AutomationProperties.AutomationId="SearchTextBox" />
                    </StackPanel>

                    <StackPanel
                        Margin="0,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        DockPanel.Dock="Right"
                        Orientation="Horizontal">
                        <!--  ComboBox chọn thao tác  -->
                        <ComboBox
                            Width="200"
                            Margin="0,0,5,14"
                            materialDesign:HintAssist.Hint="Chọn thao tác"
                            ItemsSource="{Binding ActionList}"
                            SelectedItem="{Binding SelectedAction, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            AutomationProperties.AutomationId="ActionComboBox" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!--  Nút Thêm  -->
                            <StackPanel
                                Width="110"
                                Margin="0,0,0,0"
                                Visibility="{Binding IsAdding, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                    Width="100"
                                    Margin="5"
                                    Command="{Binding AddCommand}"
                                    Content="Thêm"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    AutomationProperties.AutomationId="AddButton" />
                                <TextBlock
                                    Height="32"
                                    FontSize="10"
                                    Foreground="Gray"
                                    Text="{Binding AddMessage}"
                                    TextWrapping="Wrap"
                                    AutomationProperties.AutomationId="AddMessage" />
                            </StackPanel>

                            <!--  Nút Sửa  -->
                            <StackPanel
                                Width="110"
                                Margin="0,0,0,0"
                                Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                    Width="100"
                                    Margin="5"
                                    Command="{Binding EditCommand}"
                                    Content="Sửa"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    AutomationProperties.AutomationId="EditButton" />
                                <TextBlock
                                    Height="32"
                                    VerticalAlignment="Top"
                                    FontSize="10"
                                    Foreground="Gray"
                                    Text="{Binding EditMessage}"
                                    TextWrapping="Wrap"
                                    AutomationProperties.AutomationId="EditMessage" />
                            </StackPanel>

                            <!--  Nút Xóa  -->
                            <StackPanel
                                Width="150"
                                Margin="0,0,0,0"
                                Visibility="{Binding IsDeleting, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                    Width="100"
                                    Margin="5"
                                    Command="{Binding DeleteCommand}"
                                    Content="Xóa"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    AutomationProperties.AutomationId="DeleteButton" />
                                <TextBlock
                                    Height="32"
                                    VerticalAlignment="Top"
                                    FontSize="10"
                                    Foreground="Gray"
                                    Text="{Binding DeleteMessage}"
                                    TextWrapping="Wrap"
                                    AutomationProperties.AutomationId="DeleteMessage" />
                            </StackPanel>
                            <!--  Nút Xuất Excel  -->
                            <StackPanel
                                Width="110"
                                Margin="0,0,0,0"
                                Visibility="{Binding IsExporting, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button
                                    Width="100"
                                    Margin="5"
                                    Command="{Binding ExportToExcelCommand}"
                                    Content="Xuất Excel"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    AutomationProperties.AutomationId="ExportExcelButton" />
                                <TextBlock
                                    Height="32"
                                    VerticalAlignment="Top"
                                    FontSize="10"
                                    Foreground="Gray"
                                    Text="Xuất danh sách ra Excel"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </materialDesign:Card>

        <!--  Danh sách dịch vụ  -->
        <materialDesign:Card
            Grid.Row="3"
            Margin="10"
            Padding="5"
            VerticalAlignment="Stretch"
            BorderThickness="0.5"
            AutomationProperties.AutomationId="ServiceListCard">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,10,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Danh sách dịch vụ" />

                <ListView
                    Grid.Row="1"
                    Margin="0"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    ItemsSource="{Binding ServiceList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                    AutomationProperties.AutomationId="ServiceListView">
                    <ListView.View>
                        <GridView>
                            <!--  Icon  -->
                            <GridViewColumn Width="50">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="" />
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <materialDesign:PackIcon
                                            Width="24"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Foreground="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource BoolToBrushConverter}}"
                                            Kind="RadioboxMarked" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!--  Tên dịch vụ  -->
                            <GridViewColumn Width="200" Header="Tên dịch vụ">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="20,0,0,0"
                                            HorizontalAlignment="Left"
                                            Text="{Binding ServiceName}"
                                            TextAlignment="Left" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!--  Đơn giá  -->
                            <GridViewColumn Width="200" Header="Đơn giá">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="20,0,0,0"
                                            HorizontalAlignment="Left"
                                            Text="{Binding UnitPrice, StringFormat=N0}"
                                            TextAlignment="Left" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!--  Ghi chú  -->
                            <GridViewColumn Width="500" Header="Ghi chú">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="20,0,0,0"
                                            HorizontalAlignment="Left"
                                            Text="{Binding Note}"
                                            TextAlignment="Left" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>