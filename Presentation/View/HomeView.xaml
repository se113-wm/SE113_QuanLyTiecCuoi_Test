<UserControl
    x:Class="QuanLyTiecCuoi.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyTiecCuoi.Presentation.ViewModel"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="820"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DropShadowEffect
            x:Key="ShadowEffect"
            BlurRadius="10"
            Direction="320"
            Opacity="0.15"
            ShadowDepth="6"
            Color="Black" />
        <LinearGradientBrush x:Key="GradientBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#B5D8FF" />
            <GradientStop Offset="1.0" Color="#E3F0FF" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="TextColor" Color="#434343" />
        <SolidColorBrush x:Key="BlueBorder" Color="#2196F3" />
        <Style x:Key="CenterCellStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*" />
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Header  -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="Georgia"
                    FontSize="38"
                    FontWeight="Bold"
                    Foreground="{StaticResource TextColor}"
                    Text="Hệ thống quản lý tiệc cưới"
                    TextAlignment="Center" />
                <Button
                    Width="180"
                    Height="44"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Command="{Binding DatTiecNgayCommand}"
                    Content="Đặt Tiệc Ngay"
                    FontSize="16"
                    FontWeight="Bold"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            </StackPanel>

            <!--  Hình ảnh (Carousel)  -->
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,0,24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <!--  Ảnh bo góc  -->
                <Image Source="{Binding CurrentImage}" Stretch="UniformToFill" />

                <!--  Nút trái  -->
                <Button
                    Width="40"
                    Height="64"
                    Margin="8,0,0,0"
                    Padding="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="#80FFFFFF"
                    BorderThickness="0"
                    Command="{Binding PreviousImageCommand}"
                    Cursor="Hand"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Ảnh trước">
                    <materialDesign:PackIcon
                        Width="28"
                        Height="28"
                        Foreground="#1976D2"
                        Kind="ChevronLeft" />
                </Button>

                <!--  Nút phải  -->
                <Button
                    Width="40"
                    Height="64"
                    Margin="0,0,8,0"
                    Padding="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="#80FFFFFF"
                    BorderThickness="0"
                    Command="{Binding NextImageCommand}"
                    Cursor="Hand"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Ảnh sau">
                    <materialDesign:PackIcon
                        Width="28"
                        Height="28"
                        Foreground="#1976D2"
                        Kind="ChevronRight" />
                </Button>
            </Grid>

            <!--  Đặt tiệc gần đây  -->
            <Grid
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,0,0,10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource TextColor}"
                    Text="Đặt tiệc gần đây" />
                <DataGrid
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    ColumnHeaderHeight="50"
                    FontSize="12"
                    Foreground="{StaticResource TextColor}"
                    HeadersVisibility="Column"
                    ItemsSource="{Binding RecentBookings}"
                    RenderTransformOrigin="0.501,0.546"
                    RowHeight="38">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="2*"
                            Binding="{Binding BrideGroom}"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            Header="Tên Cô Dâu - Chú Rể" />
                        <DataGridTextColumn
                            Width="1*"
                            Binding="{Binding Hall}"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            Header="Tên Sảnh" />
                        <DataGridTextColumn
                            Width="1*"
                            Binding="{Binding TableCount}"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            Header="Số Lượng" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding BookingDate, StringFormat=dd/MM/yyyy}"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            Header="Ngày Đặt" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>
            <TextBlock
                Width="247"
                Margin="0,0,0,8"
                FontSize="16"
                FontWeight="Bold"
                Foreground="{StaticResource TextColor}"
                Text="Các tiệc cưới sắp diễn ra" />
            <Grid Grid.Row="0" Margin="0,0,10,10">
                <Grid.Resources>
                    <Style
                        x:Key="CustomCalendarDayButton"
                        BasedOn="{StaticResource MaterialDesignCalendarDayButton}"
                        TargetType="CalendarDayButton">
                        <Setter Property="materialDesign:CalendarAssist.SelectionColor" Value="#B2F39B" />
                        <Setter Property="materialDesign:CalendarAssist.SelectionForegroundColor" Value="Black" />
                    </Style>
                    <Style
                        x:Key="CustomCalendarButton"
                        BasedOn="{StaticResource MaterialDesignCalendarButton}"
                        TargetType="CalendarButton">
                        <Setter Property="materialDesign:CalendarAssist.SelectionColor" Value="#B2F39B" />
                        <Setter Property="materialDesign:CalendarAssist.SelectionForegroundColor" Value="Black" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="29*" />
                    <ColumnDefinition Width="44*" />
                </Grid.ColumnDefinitions>

                <Calendar
                    Grid.ColumnSpan="2"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    local:CalendarBehavior.HighlightedDates="{Binding WeddingDays}"
                    materialDesign:CalendarAssist.HeaderBackground="#A2E9FF"
                    materialDesign:CalendarAssist.HeaderForeground="Black"
                    materialDesign:CalendarAssist.Orientation="Horizontal"
                    Background="White"
                    BorderBrush="LightBlue"
                    BorderThickness="1"
                    FontSize="14"
                    Foreground="Black"
                    Language="vi-VN"
                    SelectedDate="{Binding SelectedDate}" />
            </Grid>
            <Grid Grid.Row="1" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Width="258"
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource TextColor}"
                    Text="Thống kê tháng gần nhất" />
                <ContentControl
                    Grid.Row="1"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="{Binding StatisticChartControl}" />
            </Grid>

        </Grid>
    </Grid>
</UserControl>