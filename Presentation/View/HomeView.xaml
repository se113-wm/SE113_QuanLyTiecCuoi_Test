<UserControl
    x:Class="QuanLyTiecCuoi.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyTiecCuoi.Presentation.ViewModel"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    Background="#E3F0FF"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DropShadowEffect
            x:Key="ShadowEffect"
            BlurRadius="10"
            Direction="320"
            Opacity="0.15"
            ShadowDepth="6"
            Color="Black" />
        <LinearGradientBrush x:Key="GradientBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#B5D8FF" />
            <GradientStop Offset="1.0" Color="#E3F0FF" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="BlueText" Color="#1976D2" />
        <SolidColorBrush x:Key="BlueBorder" Color="#2196F3" />
        <Style x:Key="CenterCellStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="689*" />
            <ColumnDefinition Width="271*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel
                Grid.Column="0"
                Width="544"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,8"
                    HorizontalAlignment="Center"
                    FontSize="38"
                    FontWeight="Bold"
                    Foreground="{StaticResource BlueText}"
                    Text="Quản Lý Tiệc Cưới"
                    TextAlignment="Center" />
                <TextBlock
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    FontSize="22"
                    Foreground="{StaticResource BlueText}"
                    Text="Quản lý dịch vụ, món ăn và địa điểm tổ chức."
                    TextAlignment="Center" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontStyle="Italic"
                    Foreground="#2196F3"
                    Text="Tối ưu vận hành - Phát triển kinh doanh."
                    TextAlignment="Center" />
                <!-- Nút Đặt Tiệc Ngay -->
                <Button
                    Width="180"
                    Height="44"
                    Margin="0,16,0,0"
                    HorizontalAlignment="Center"
                    Background="{StaticResource BlueBorder}"
                    Command="{Binding DatTiecNgayCommand}"
                    Content="Đặt Tiệc Ngay"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    IsDefault="True"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>

            <!-- Ảnh cưới -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,32,0,0"
                Width="572"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <Border
                    Width="283"
                    Height="200"
                    Background="#F8FBFF"
                    BorderBrush="{StaticResource BlueBorder}"
                    BorderThickness="2"
                    CornerRadius="18"
                    Effect="{StaticResource ShadowEffect}">
                    <Image
                        Margin="0,-2,-6,-2"
                        ClipToBounds="True"
                        Source="/Image/wedding.jpg"
                        Stretch="UniformToFill" />
                </Border>

                <Border
                    Width="230"
                    Height="200"
                    Background="#F8FBFF"
                    BorderBrush="{StaticResource BlueBorder}"
                    BorderThickness="2"
                    CornerRadius="18"
                    Effect="{StaticResource ShadowEffect}"
                    Margin="16,0,0,0">
                    <Image
                        Margin="-10,-10,-10,-10"
                        ClipToBounds="True"
                        Source="/Image/anhcuoi.png"
                        Stretch="UniformToFill" HorizontalAlignment="Center" Width="240" />

                </Border>
            </StackPanel>

            <!-- Đặt tiệc gần đây -->
            <StackPanel
                Grid.Row="2"
                Margin="0,61,0,0"
                HorizontalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,8"
                    HorizontalAlignment="Left"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource BlueText}"
                    Text="Đặt tiệc gần đây" />
                <Border
                    Padding="4"
                    Background="#F8FBFF"
                    BorderBrush="{StaticResource BlueBorder}"
                    BorderThickness="2"
                    CornerRadius="14"
                    Effect="{StaticResource ShadowEffect}">
                    <DataGrid
                        Width="auto"
                        Height="87"
                        AutoGenerateColumns="False"
                        Background="Transparent"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserResizeRows="False"
                        ColumnHeaderHeight="50"
                        FontSize="16"
                        Foreground="{StaticResource BlueText}"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding RecentBookings}"
                        RenderTransformOrigin="0.501,0.546"
                        RowHeight="38">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding BrideGroom}"
                                ElementStyle="{StaticResource CenterCellStyle}"
                                Header="Tên Cô Dâu - Chú Rể" />
                            <DataGridTextColumn
                                Width="130"
                                Binding="{Binding Hall}"
                                ElementStyle="{StaticResource CenterCellStyle}"
                                Header="Tên Sảnh" />
                            <DataGridTextColumn
                                Width="105"
                                Binding="{Binding TableCount}"
                                ElementStyle="{StaticResource CenterCellStyle}"
                                Header="Số Lượng" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding BookingDate, StringFormat=dd/MM/yyyy}"
                                ElementStyle="{StaticResource CenterCellStyle}"
                                Header="Ngày Đặt" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>

            <!-- Lịch và biểu đồ -->
            <StackPanel
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="1"
                Margin="32,0,0,0"
                VerticalAlignment="Top">
                <TextBlock
                    Width="247"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{StaticResource BlueText}"
                    Text="Các tiệc cưới sắp diễn ra" />
                <Border
                    Margin="0,0,0,10"
                    Padding="6"
                    HorizontalAlignment="Stretch"
                    Background="#F8FBFF"
                    BorderBrush="{StaticResource BlueBorder}"
                    BorderThickness="2"
                    CornerRadius="14"
                    Effect="{StaticResource ShadowEffect}">
                    <Grid>
                        <Grid.Resources>
                            <Style
                                x:Key="CustomCalendarDayButton"
                                BasedOn="{StaticResource MaterialDesignCalendarDayButton}"
                                TargetType="CalendarDayButton">
                                <Setter Property="materialDesign:CalendarAssist.SelectionColor" Value="#B2F39B" />
                                <Setter Property="materialDesign:CalendarAssist.SelectionForegroundColor" Value="Black" />
                            </Style>
                            <Style
                                x:Key="CustomCalendarButton"
                                BasedOn="{StaticResource MaterialDesignCalendarButton}"
                                TargetType="CalendarButton">
                                <Setter Property="materialDesign:CalendarAssist.SelectionColor" Value="#B2F39B" />
                                <Setter Property="materialDesign:CalendarAssist.SelectionForegroundColor" Value="Black" />
                            </Style>
                        </Grid.Resources>
                        <Calendar
                            VerticalAlignment="Center"
                            local:CalendarBehavior.HighlightedDates="{Binding WeddingDays}"
                            materialDesign:CalendarAssist.HeaderBackground="#A2E9FF"
                            materialDesign:CalendarAssist.HeaderForeground="Black"
                            materialDesign:CalendarAssist.Orientation="Horizontal"
                            Background="White"
                            BorderBrush="LightBlue"
                            BorderThickness="1"
                            FontSize="14"
                            Foreground="Black"
                            Language="vi-VN"
                            SelectedDate="{Binding SelectedDate}" />
                    </Grid>
                </Border>
                <TextBlock
                    Width="258"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="#1976D2"
                    Text="Thống kê tháng gần nhất" />
                <Border
                    Width="395"
                    Height="97"
                    Margin="0,4,0,0"
                    Background="#F8FBFF"
                    BorderBrush="{StaticResource BlueBorder}"
                    BorderThickness="2"
                    CornerRadius="14"
                    Effect="{StaticResource ShadowEffect}">
                    <ContentControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding StatisticChartControl}" />
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>