<UserControl
    x:Class="QuanLyTiecCuoi.Presentation.View.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuanLyTiecCuoi.Presentation.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="White"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Tiêu đề  -->
            <RowDefinition Height="Auto" />
            <!--  Bộ lọc  -->
            <RowDefinition Height="Auto" />
            <!--  Tổng doanh thu  -->
            <RowDefinition Height="*" />
            <!--  Bảng chi tiết  -->
            <RowDefinition Height="Auto" />
            <!--  Nút thao tác  -->
        </Grid.RowDefinitions>

        <!--  Tiêu đề  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="26"
            FontWeight="Bold"
            Foreground="DarkSlateBlue"
            Text="BÁO CÁO DOANH SỐ" />

        <!--  Bộ lọc  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,15"
            Orientation="Vertical">
            <!--  Dòng đầu tiên: Tiêu đề  -->
            <TextBlock
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Thao tác" />

            <!--  Dòng thứ hai: Các điều khiển chọn tháng, năm, nút xem  -->
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Text="Tháng:" />
                <ComboBox
                    Width="80"
                    Margin="0,0,15,0"
                    ItemsSource="{Binding Months}"
                    SelectedItem="{Binding SelectedMonth}" />

                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Text="Năm:" />
                <ComboBox
                    Width="100"
                    Margin="0,0,15,0"
                    ItemsSource="{Binding Years}"
                    SelectedItem="{Binding SelectedYear}" />

                <Button
                    Width="120"
                    Command="{Binding LoadReportCommand}"
                    Content="Xem báo cáo" />
            </StackPanel>
        </StackPanel>


        <!--  Tổng doanh thu  -->
        <TextBlock
            Grid.Row="2"
            Margin="0,0,0,10"
            FontSize="16"
            FontWeight="SemiBold"
            Foreground="DarkGreen"
            Text="{Binding TongDoanhThu, StringFormat=Tổng Doanh Thu: {0:N0} VNĐ}" />

        <!--  Bảng chi tiết  -->
        <DataGrid
            Grid.Row="3"
            Margin="0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserReorderColumns="False"
            CanUserResizeColumns="False"
            CanUserResizeRows="False"
            CanUserSortColumns="False"
            FontSize="14"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding ReportList}"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding STT}"
                    Header="STT">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NgayHienThi}"
                    Header="Ngày">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding SoLuongTiec}"
                    Header="Số Lượng Tiệc">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DoanhThu, StringFormat={}{0:N0} VNĐ}"
                    Header="Doanh Thu">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TiLe}"
                    Header="Tỉ Lệ (%)">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Height" Value="35" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="Background" Value="LightGray" />
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <!--  Nút thao tác  -->
        <StackPanel
            Grid.Row="4"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5"
                Command="{Binding ExportPdfCommand}"
                Content="Xuất PDF" />
            <Button
                Width="100"
                Margin="5"
                Command="{Binding ExportExcelCommand}"
                Content="Xuất Excel" />
            <Button
                Width="120"
                Margin="5"
                Command="{Binding ShowChartCommand}"
                Content="Xem biểu đồ" />
        </StackPanel>
    </Grid>
</UserControl>
