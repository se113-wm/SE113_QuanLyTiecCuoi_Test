<UserControl 
	x:Class="QuanLyTiecCuoi.Presentation.View.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:QuanLyTiecCuoi"
    xmlns:helpers="clr-namespace:QuanLyTiecCuoi.Presentation.Helpers"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Row="0"
			Margin="0,0,10,0"
			FontSize="14"
			FontWeight="Bold"
			Text="Danh sách tiệc cưới" />
		<StackPanel
			Grid.Row="1">
			<Button
                Width="100"
                Margin="0,100,0,0"
                Command="{Binding BillCommand}"
                Content="Hóa đơn"
                Style="{StaticResource MaterialDesignRaisedButton}" />
		</StackPanel>
    </Grid>
</UserControl>
