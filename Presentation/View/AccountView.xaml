<UserControl 
    x:Class="QuanLyTiecCuoi.Presentation.View.AccountView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:QuanLyTiecCuoi"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Tên trang  -->
        <TextBlock
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Tài khoản của tôi" />
        
        <!--  Thông tin  -->
        <materialDesign:Card
            Grid.Row="1"
            Margin="10"
            Padding="10"
            BorderThickness="0.5">
            <Grid
                Width="1000">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Thông tin chi tiết" />
                    <TextBox
                        Margin="5"
                        materialDesign:HintAssist.Hint="Tên đăng nhập"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TenDangNhap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox
                        Margin="5"
                        materialDesign:HintAssist.Hint="Họ tên"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding HoTen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox
                        Margin="5"
                        materialDesign:HintAssist.Hint="Email"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
                    <TextBox
                        Grid.Column="4"
                        Margin="5"
                        FontSize="14"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding TenNhom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Margin="5">
                    <Button
                        Grid.Column="1"
                        Width="180"
                        Margin="5"
                        VerticalAlignment="Top"
                        Content="Lưu thay đổi"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                    <TextBlock
                        Height="20"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Foreground="Gray"
                        Text="{Binding SaveMessage}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

        </materialDesign:Card>

        <!-- Mật khẩu -->
        <materialDesign:Card
            Grid.Row="3"
            Margin="10"
            Padding="10"
            BorderThickness="0.5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Đổi mật khẩu" />
                </StackPanel>

                <StackPanel
                    Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    Grid.Row="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="0,0,5,0"
                                            FontSize="14"   
                                            FontWeight="Medium"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Right"
                                            Text="Mật khẩu hiện tại:" />
                                        <PasswordBox
                                            x:Name="FloatingPasswordBox"
                                            Grid.Column="1"
                                            Margin="20,5,0,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Nhập mật khẩu hiện tại"
                                            materialDesign:TextFieldAssist.HasClearButton="True"
                                            FontSize="14"
                                            Foreground="Black"
                                            Background="White"
                                            Style="{StaticResource MaterialDesignFilledRevealPasswordBox}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PasswordChanged">
                                                    <i:InvokeCommandAction Command="{Binding CurrentPasswordChangedCommand}" CommandParameter="{Binding ElementName=FloatingPasswordBox}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </PasswordBox>
                                    </Grid>
                                </StackPanel>

                                <StackPanel
                                    Grid.Row="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="0,0,5,0"
                                            FontSize="14"   
                                            FontWeight="Medium"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Right"
                                            Text="Nhập mật khẩu mới:" />
                                        <PasswordBox
                                            x:Name="FloatingPasswordBox1"
                                            Grid.Column="1"
                                            Margin="20,5,0,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Nhập mật khẩu mới"
                                            materialDesign:TextFieldAssist.HasClearButton="True"
                                            FontSize="14"
                                            Foreground="Black"
                                            Background="White"
                                            Style="{StaticResource MaterialDesignFilledRevealPasswordBox}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PasswordChanged">
                                                    <i:InvokeCommandAction Command="{Binding NewPasswordChangedCommand}" CommandParameter="{Binding ElementName=FloatingPasswordBox1}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </PasswordBox>
                                    </Grid>
                                </StackPanel>

                                <StackPanel
                                    Grid.Row="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="0,0,5,0"
                                            FontSize="14"   
                                            FontWeight="Medium"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Right"
                                            Text="Nhập lại mật khẩu mới:" />
                                        <PasswordBox
                                            x:Name="FloatingPasswordBox2"
                                            Grid.Column="1"
                                            Margin="20,5,0,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Nhập lại mật khẩu mới"
                                            materialDesign:TextFieldAssist.HasClearButton="True"
                                            FontSize="14"
                                            Foreground="Black"
                                            Background="White"
                                            Style="{StaticResource MaterialDesignFilledRevealPasswordBox}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PasswordChanged">
                                                    <i:InvokeCommandAction Command="{Binding NewPassword1ChangedCommand}" CommandParameter="{Binding ElementName=FloatingPasswordBox2}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </PasswordBox>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center">
                            <Button
                                Width="150"
                                Margin="5"
                                Command="{Binding ChangePasswordCommand}"
                                Content="Đổi mật khẩu"
                                Style="{StaticResource MaterialDesignRaisedButton}" />
                            <TextBlock
                                Height="20"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                Foreground="Gray"
                                Text="{Binding ChangePasswordMessage}"
                                TextWrapping="Wrap" />          
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
