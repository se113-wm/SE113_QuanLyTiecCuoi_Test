<Window
    x:Class="QuanLyTiecCuoi.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:QuanLyTiecCuoi"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:QuanLyTiecCuoi.ViewModel"
    Name="mainWindow"
    Title="Wedding Management System"
    Width="1400"
    Height="820"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    Icon="Assets/icon_window.ico"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    AutomationProperties.AutomationId="MainWindow">

    <Grid Margin="0,0,0,0"
            AutomationProperties.AutomationId="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--  Navigation Panel  -->
        <Grid
            Grid.Column="0"
            Width="200"
            HorizontalAlignment="Left"
            AutomationProperties.AutomationId="NavigationPanel">
            <Grid Background="#6a7eee">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Border
                    Grid.Row="0"
                    Margin="10"
                    Padding="10"
                    Background="#80c0ff"
                    CornerRadius="5"
                    AutomationProperties.AutomationId="HeaderBorder">
                    <StackPanel
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="48"
                            Height="48"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Kind="Storefront"
                            AutomationProperties.AutomationId="LogoIcon"/>
                        <StackPanel VerticalAlignment="Center"
                                Orientation="Vertical">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Trung Tâm Tiệc Cưới"
                                TextAlignment="Center"
                                AutomationProperties.AutomationId="AppTitle1"/>
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="UIT"
                                TextAlignment="Left"
                                AutomationProperties.AutomationId="AppTitle2"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Navigation Items  -->
                <ScrollViewer Grid.Row="1"
                        VerticalScrollBarVisibility="Auto"
                        AutomationProperties.AutomationId="MenuScrollViewer">
                    <Grid Margin="10,0"
                            AutomationProperties.AutomationId="MenuGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--  Home  -->
                        <Button
                            Grid.Row="0"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[Home]}"
                            Command="{Binding HomeCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Trang chủ"
                            Visibility="Visible"
                            AutomationProperties.AutomationId="HomeButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="Home"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Trang chủ"/>
                            </StackPanel>
                        </Button>

                        <!--  Hall Type  -->
                        <Button
                            Grid.Row="1"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[HallType]}"
                            Command="{Binding HallTypeCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Loại sảnh"
                            Visibility="{Binding ButtonVisibilities[HallType]}"
                            AutomationProperties.AutomationId="HallTypeButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="Domain"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Loại sảnh"/>
                            </StackPanel>
                        </Button>

                        <!--  Hall  -->
                        <Button
                            Grid.Row="2"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[Hall]}"
                            Command="{Binding HallCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Sảnh"
                            Visibility="{Binding ButtonVisibilities[Hall]}"
                            AutomationProperties.AutomationId="HallButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="City"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Sảnh"/>
                            </StackPanel>
                        </Button>

                        <!--  Shift  -->
                        <Button
                            Grid.Row="3"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[Shift]}"
                            Command="{Binding ShiftCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Ca"
                            Visibility="{Binding ButtonVisibilities[Shift]}"
                            AutomationProperties.AutomationId="ShiftButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="Clock"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Ca"/>
                            </StackPanel>
                        </Button>

                        <!--  Food  -->
                        <Button
                            Grid.Row="4"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[Food]}"
                            Command="{Binding FoodCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Món ăn"
                            Visibility="{Binding ButtonVisibilities[Food]}"
                            AutomationProperties.AutomationId="FoodButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="Food"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Món ăn"/>
                            </StackPanel>
                        </Button>

                        <!--  Service  -->
                        <Button
                            Grid.Row="5"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[Service]}"
                            Command="{Binding ServiceCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Dịch vụ"
                            Visibility="{Binding ButtonVisibilities[Service]}"
                            AutomationProperties.AutomationId="ServiceButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="Tools"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Dịch vụ"/>
                            </StackPanel>
                        </Button>

                        <!--  Wedding  -->
                        <Button
                            Grid.Row="6"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[Wedding]}"
                            Command="{Binding WeddingCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Tiệc cưới"
                            Visibility="{Binding ButtonVisibilities[Wedding]}"
                            AutomationProperties.AutomationId="WeddingButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="Cake"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Tiệc cưới"/>
                            </StackPanel>
                        </Button>

                        <!--  Report  -->
                        <Button
                            Grid.Row="7"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[Report]}"
                            Command="{Binding ReportCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Report"
                            Visibility="{Binding ButtonVisibilities[Report]}"
                            AutomationProperties.AutomationId="ReportButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="FileChart"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Report"/>
                            </StackPanel>
                        </Button>

                        <!--  Parameter  -->
                        <Button
                            Grid.Row="8"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[Parameter]}"
                            Command="{Binding ParameterCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Parameter"
                            Visibility="{Binding ButtonVisibilities[Parameter]}"
                            AutomationProperties.AutomationId="ParameterButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="Tune"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Parameter"/>
                            </StackPanel>
                        </Button>

                        <!--  Permission  -->
                        <Button
                            Grid.Row="9"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[Permission]}"
                            Command="{Binding PermissionCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Permission"
                            Visibility="{Binding ButtonVisibilities[Permission]}"
                            AutomationProperties.AutomationId="PermissionButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="ShieldAccount"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Permission"/>
                            </StackPanel>
                        </Button>

                        <!--  User  -->
                        <Button
                            Grid.Row="10"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Background="{Binding ButtonBackgrounds[User]}"
                            Command="{Binding UserCommand}"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="User"
                            Visibility="{Binding ButtonVisibilities[User]}"
                            AutomationProperties.AutomationId="UserButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Margin="5"
                                        Kind="Account"/>
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="User"/>
                            </StackPanel>
                        </Button>

                    </Grid>
                </ScrollViewer>

                <!--  Footer  -->
                <StackPanel
                    Grid.Row="2"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    AutomationProperties.AutomationId="FooterPanel">

                    <!--  Account  -->
                    <Button
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="{Binding ButtonBackgrounds[Account]}"
                        Command="{Binding AccountCommand}"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Account"
                        AutomationProperties.AutomationId="AccountButton">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Margin="5"
                                    Kind="AccountCircle"/>
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Account"/>
                        </StackPanel>
                    </Button>

                    <!--  Logout  -->
                    <Button
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="Transparent"
                        Command="{Binding LogoutCommand}"
                        CommandParameter="{Binding ElementName=mainWindow}"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Logout"
                        AutomationProperties.AutomationId="LogoutButton">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Margin="5"
                                    Kind="Logout"/>
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Logout"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Grid>
        </Grid>

        <!--  Main Content  -->
        <Grid Grid.Column="1"
                Background="White"
                AutomationProperties.AutomationId="ContentPanel">
            <ContentControl Content="{Binding CurrentView}"
                    AutomationProperties.AutomationId="MainContentControl"/>
        </Grid>
    </Grid>

</Window>
