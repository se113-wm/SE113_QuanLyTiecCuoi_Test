<Window
    x:Class="QuanLyTiecCuoi.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:QuanLyTiecCuoi"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignColors="clr-namespace:MaterialDesignColors;assembly=MaterialDesignColors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:QuanLyTiecCuoi.ViewModel"
    Name="loginWindow"
    Title="Login"
    Width="875"
    Height="645"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    Icon="Assets/icon_window.ico"
    SizeToContent="Manual"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    AutomationProperties.AutomationId="LoginWindow">
    <Grid AutomationProperties.AutomationId="LoginMainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" AutomationProperties.AutomationId="LoginContentGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="30"
                    Opacity="0.4"
                    ShadowDepth="1" />
            </Grid.Effect>
            
            <Border Background="#6a7eee" ClipToBounds="True" AutomationProperties.AutomationId="LoginLeftPanel">
                <Grid>
                    <StackPanel Margin="0,120,0,0" VerticalAlignment="Top" AutomationProperties.AutomationId="WelcomeStack">
                        <TextBlock
                            FontSize="46"
                            FontWeight="Light"
                            Foreground="White"
                            Text="Welcome"
                            TextAlignment="Center"
                            AutomationProperties.AutomationId="WelcomeText" />
                        <TextBlock
                            FontSize="18"
                            FontWeight="Light"
                            Foreground="White"
                            Text="Login to continue"
                            TextAlignment="Center"
                            AutomationProperties.AutomationId="WelcomeSubtitleText" />
                        <TextBlock
                            FontSize="18"
                            FontWeight="Light"
                            Foreground="White"
                            Text="UIT Wedding Center"
                            TextAlignment="Center"
                            AutomationProperties.AutomationId="CenterNameText" />
                    </StackPanel>

                    <Ellipse
                        Width="500"
                        Height="500"
                        Margin="50,0,0,-200"
                        VerticalAlignment="Bottom"
                        Fill="#80c0ff"
                        Opacity="0.6" />
                    <Ellipse
                        Width="300"
                        Height="300"
                        Margin="-450,0,0,30"
                        VerticalAlignment="Bottom"
                        Fill="#83c2ff"
                        Opacity="0.3" />
                    <Ellipse
                        Width="400"
                        Height="400"
                        Margin="-320,0,0,-120"
                        VerticalAlignment="Bottom"
                        Fill="#84c3ff"
                        Opacity="0.3" />
                    <Ellipse
                        Width="250"
                        Height="250"
                        Margin="-380,0,0,-120"
                        VerticalAlignment="Bottom"
                        Fill="#81c2ff" />
                    <Ellipse
                        Width="400"
                        Height="400"
                        Margin="280,0,0,-70"
                        VerticalAlignment="Bottom"
                        Fill="#87c5ff"
                        Opacity="0.8" />
                </Grid>
            </Border>
            
            <Border Grid.Column="1" Background="White" AutomationProperties.AutomationId="LoginFormPanel">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" MinHeight="196.04" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="1"
                        Height="206"
                        VerticalAlignment="Center"
                        AutomationProperties.AutomationId="LoginInputStack">
                        
                        <Border
                            Margin="6"
                            Padding="6"
                            Background="Transparent"
                            CornerRadius="5"
                            Opacity="0.7"
                            AutomationProperties.AutomationId="UsernameBorder">
                            <Grid>
                                <TextBox
                                    x:Name="UsernameTextBox"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Username"
                                    materialDesign:ValidationAssist.PopupPlacement="AbsolutePoint"
                                    FontSize="23"
                                    Foreground="Black"
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    Text="{Binding Username}"
                                    TextWrapping="Wrap"
                                    AutomationProperties.AutomationId="UsernameTextBox">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="TextChanged">
                                            <i:InvokeCommandAction Command="{Binding UsernameChangedCommand}" CommandParameter="{Binding ElementName=UsernameTextBox}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>
                        </Border>

                        <Border
                            Margin="6"
                            Padding="6"
                            Background="Transparent"
                            CornerRadius="5"
                            Opacity="0.7"
                            AutomationProperties.AutomationId="PasswordBorder">
                            <Grid>
                                <PasswordBox
                                    x:Name="PasswordBox"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Password"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    FontSize="23"
                                    Foreground="Black"
                                    Style="{StaticResource MaterialDesignFilledRevealPasswordBox}"
                                    AutomationProperties.AutomationId="PasswordBox">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PasswordChanged">
                                            <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}" CommandParameter="{Binding ElementName=PasswordBox}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </PasswordBox>
                            </Grid>
                        </Border>
                    </StackPanel>
                    
                    <Border
                        Grid.Row="2"
                        Width="250"
                        Height="46"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#6a7eee"
                        CornerRadius="10"
                        AutomationProperties.AutomationId="LoginButtonBorder">
                        <Button
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=loginWindow}"
                            Content="Login"
                            FontSize="18"
                            Foreground="White"
                            IsDefault="True"
                            AutomationProperties.AutomationId="LoginButton" />
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
