<Window
    x:Class="QuanLyTiecCuoi.Presentation.View.AddWeddingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Đặt Tiệc Cưới"
    Width="1000"
    Height="720"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Title  -->
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Đặt Tiệc Cưới" />

            <!--  Wedding Info  -->
            <materialDesign:Card
                Grid.Row="1"
                Margin="0,0,0,10"
                Padding="15">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Chi tiết tiệc cưới" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Groom Name  -->
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Tên chú rể"
                            Text="{Binding TenChuRe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Bride Name  -->
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Tên cô dâu"
                            Text="{Binding TenCoDau, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Phone  -->
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Điện thoại"
                            Text="{Binding DienThoai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Wedding Date  -->
                        <DatePicker
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Ngày đãi tiệc"
                            SelectedDate="{Binding NgayDaiTiec, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Session  -->
                        <ComboBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Ca"
                            ItemsSource="{Binding CaList}"
                            SelectedItem="{Binding SelectedCa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Hall  -->
                        <ComboBox
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Sảnh"
                            ItemsSource="{Binding SanhList}"
                            SelectedItem="{Binding SelectedSanh, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  Deposit  -->
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Tiền đặt cọc"
                            Text="{Binding TienDatCoc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Table Count  -->
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Số lượng bàn"
                            Text="{Binding SoLuongBan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Reserve Table Count  -->
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="5"
                            materialDesign:HintAssist.Hint="Số bàn dự trữ"
                            Text="{Binding SoBanDuTru, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!--  Menu & Service Details  -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Section Titles  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5,0,0,5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Chi tiết thực đơn" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5,0,0,5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Chi tiết dịch vụ" />


                <!--  Menu Section  -->
                <materialDesign:Card
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5"
                    Padding="0">
                    <StackPanel>

                        <!--  Menu Detail Section  -->
                        <materialDesign:Card Margin="5" Padding="0">
                            <Grid VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Chi tiết thực đơn:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Width="auto"
                                    Margin="5,0"
                                    materialDesign:HintAssist.Hint="Tên món ăn"
                                    IsReadOnly="True"
                                    Text="{Binding MonAn.TenMonAn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Width="auto"
                                    Margin="5,0"
                                    materialDesign:HintAssist.Hint="Số lượng"
                                    Text="{Binding TD_SoLuong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="auto"
                                    Margin="5,0"
                                    materialDesign:HintAssist.Hint="Đơn giá"
                                    IsReadOnly="True"
                                    Text="{Binding MonAn.DonGia, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    Command="{Binding ChonMonAnCommand}"
                                    Content="Chọn món"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="4"
                                    Margin="5,8,5,0"
                                    materialDesign:HintAssist.Hint="Ghi chú"
                                    AcceptsReturn="True"
                                    Text="{Binding TD_GhiChu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </materialDesign:Card>
                        <!--  Action Block: Label left, Buttons right  -->
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--  Action Label  -->
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Thao tác" />
                            <!--  Action Buttons  -->
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding AddMenuCommand}"
                                    Content="Thêm"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding EditMenuCommand}"
                                    Content="Sửa"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding DeleteMenuCommand}"
                                    Content="Xóa"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                            </StackPanel>
                        </Grid>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Danh sách thực đơn" />
                        <DataGrid
                            Height="auto"
                            Margin="0,0,0,0"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding MenuList}"
                            SelectedItem="{Binding SelectedMenuItem}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="auto"
                                    Binding="{Binding STT}"
                                    Header="STT" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TenMonAn}"
                                    Header="Tên Món Ăn" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding SoLuong}"
                                    Header="SL" />
                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding DonGia, StringFormat=N0}"
                                    Header="Đơn giá" />
                                <DataGridTextColumn
                                    Width="120"
                                    Binding="{Binding GhiChu}"
                                    Header="Ghi chú" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>

                <!--  Service Section  -->
                <materialDesign:Card
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    Padding="0">
                    <StackPanel>
                        <!--  Service Detail Section  -->
                        <materialDesign:Card Margin="5" Padding="0">
                            <Grid VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Chi tiết dịch vụ:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Width="auto"
                                    Margin="5,0"
                                    materialDesign:HintAssist.Hint="Tên dịch vụ"
                                    IsReadOnly="True"
                                    Text="{Binding DichVu.TenDichVu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Width="auto"
                                    Margin="5,0"
                                    materialDesign:HintAssist.Hint="Số lượng"
                                    Text="{Binding DV_SoLuong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="0,0,10,0"
                                    Command="{Binding ChonDichVuCommand}"
                                    Content="Chọn dịch vụ"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="auto"
                                    Margin="5,0"
                                    materialDesign:HintAssist.Hint="Đơn giá"
                                    IsReadOnly="True"
                                    Text="{Binding DichVu.DonGia, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="4"
                                    Margin="5,8,5,0"
                                    materialDesign:HintAssist.Hint="Ghi chú"
                                    AcceptsReturn="True"
                                    Text="{Binding DV_GhiChu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </materialDesign:Card>
                        <!--  Action Block: Label left, Buttons right  -->
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--  Action Label  -->
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Thao tác" />
                            <!--  Action Buttons  -->
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding AddServiceCommand}"
                                    Content="Thêm"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding EditServiceCommand}"
                                    Content="Sửa"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                                <Button
                                    Margin="0,0,10,0"
                                    Command="{Binding DeleteServiceCommand}"
                                    Content="Xóa"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" />
                            </StackPanel>
                        </Grid>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Danh sách dịch vụ" />
                        <DataGrid
                            Height="auto"
                            Margin="0,0,0,0"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding ServiceList}"
                            SelectedItem="{Binding SelectedServiceItem}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="40"
                                    Binding="{Binding STT}"
                                    Header="STT" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TenDichVu}"
                                    Header="Dịch vụ" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding SoLuong}"
                                    Header="SL" />
                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding DonGia, StringFormat=N0}"
                                    Header="Đơn giá" />
                                <DataGridTextColumn
                                    Width="120"
                                    Binding="{Binding GhiChu}"
                                    Header="Ghi chú" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>

                <!--  Nút xác nhận và hủy  -->
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="120"
                        Margin="0,0,10,0"
                        Command="{Binding ConfirmCommand}"
                        Content="Xác nhận"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                    <Button
                        Width="120"
                        Command="{Binding CancelCommand}"
                        Content="Hủy"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>